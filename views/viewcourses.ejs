<!DOCTYPE html>
<html>
<head>
    <title>View Courses</title>
    <script type="text/javascript" src="coursesajax.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container p-5 bg-dark text-white mt-4">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search Course by Name" onkeyup="searchCourse(this.value)" />
        </div>

        <table class="table table-bordered text-white">
            <thead>
                <tr>
                    <th>SR NO</th>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>DELETE</th>
                    <th>UPDATE</th>
                </tr>
            </thead>
            <tbody id="tblCourseBody">
                <% if (CourseList.length !== 0) { %>
                    <% CourseList.forEach((row, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= row.id %></td>
                            <td><%= row.name %></td>
                            <td><button class="btn btn-danger btn-sm">Delete</button></td>
                            <td><button class="btn btn-warning btn-sm">Update</button></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No data found in Course table</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
